{
  "name": "ubiquitous-automation",
  "version": "1.0.0",
  "description": "A demo of ubiquitous automation principles from The Pragmatic Programmer",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:all": "./scripts/test-all.sh",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:test": "./scripts/lint-and-test.sh",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "setup": "npm install && make setup",
    "pre-commit": "./scripts/pre-commit.sh",
    "prepare": "husky install || true",
    "quality:check": "./scripts/test-all.sh",
    "quality:lint": "./scripts/lint-and-test.sh",
    "git:pre-commit": "./scripts/pre-commit.sh",
    "test:a11y": "pa11y-ci --config .pa11yci.json",
    "test:a11y:local": "ts-node scripts/test-accessibility.ts",
    "test:a11y:axe": "axe http://localhost:3000 --exit",
    "serve": "serve public -l 3000"
  },
  "keywords": [
    "automation",
    "ci",
    "devops",
    "pragmatic-programmer"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/cli": "^4.8.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vercel/node": "^3.0.11",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "markdown-pdf": "^11.0.0",
    "pa11y": "^7.0.0",
    "pa11y-ci": "^3.0.1",
    "prettier": "^3.2.5",
    "puppeteer": "^24.32.1",
    "serve": "^14.2.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
  }
}
